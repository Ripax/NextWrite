{
    "manifest_version": 3,
    "name": "NexText AI Writer",
    "version": "1.1.2",
    "description": "Rewrite text and solve problems using OpenRouter or Ollama.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://openrouter.ai/*",
        "http://localhost:11434/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://openrouter.ai http://localhost:11434"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/ai.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}